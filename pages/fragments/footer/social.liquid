<div class="bg-neutral-50 border-t">
  <div
    class="
      max-w-screen-lg
      mx-auto
      flex
      items-center
      divide-x divide-neutral-500
      py-4
    "
  >
    <div class="flex space-x-12 grow justify-center">
      {% for link in footer.links.social %}
      <a
        href="{{ link.href }}"
        class="
          hover:outline
          hover:outline-offset-1
          hover:outline-1
          hover:outline-blue-500
          hover:rounded-full
        "
      >
        <img src="{{ link.src }}" alt="{{ link.alt }}" class="" />
      </a>
      {% endfor %}
    </div>
    <div class="flex space-x-8 grow justify-center">
      {% for paymentMethod in footer.paymentMethods %}
      <img
        src="{{ paymentMethod.src }}"
        alt="{{ paymentMethod.alt }}"
        class="w-8 h-auto"
      />
      {% endfor %}
    </div>
  </div>
</div>
