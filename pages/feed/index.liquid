---
layout: base
title: Feed | ASOS
pagination:
  data: pages.feed.posts
  size: 9
---

<section class="flex flex-col items-center bg-neutral-50 py-8 px-4">
  <h1 class="text-center uppercase font-extrabold text-2xl tracking-widest text-neutral-900">{{ pages.feed.title }}</h1>
  <p class="text-center text-neutral-900">{{ pages.feed.subtitle }}</p>
  <div class="max-w-screen-lg grid grid-cols-3 gap-4 gap-y-10 mt-8 text-neutral-900 leading-normal">
    {% for post in pagination.items %}
    <article class="flex flex-col transition-transform duration-500 ease-in-out hover:scale-105">
      <a href="/feed/{{ post.slug }}" class="grow flex flex-col"
        >{% image post.image.src, post.image.alt, "aspect-square object-cover" %}
        <div class="grow flex flex-col py-4 px-3">
          <span class="block uppercase text-xs leading-none font-bold text-neutral-500">{{ post.category }}</span>
          <h3 class="mt-1.5 font-bold uppercase text-xl">{{ post.title }}</h3>
          <span class="mt-1.5 block text-neutral-500">{{ post.description }}</span>
          <span class="flex-1 flex items-end justify-end pt-8 text-right text-xs font-bold text-neutral-600">
            {% dateFormat post.datePublished, "dd MMMM yyyy" %}
          </span>
        </div>
      </a>
    </article>
    {% endfor %}
  </div>
  <div class="space-x-2">
    {% if pagination.href.previous %}
    <a
      href="{{ pagination.href.previous }}"
      class="
        inline-block
        mt-6
        py-3
        px-4
        uppercase
        text-neutral-900 text-sm
        font-bold
        tracking-wide
        leading-none
        border-2 border-neutral-900
        transition-colors
        ease-in
        duration-300
        hover:bg-neutral-900 hover:text-neutral-50
      "
    >
      <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6">
        <path
          d="M8.81809 4.18179C8.99383 4.35753 8.99383 4.64245 8.81809 4.81819L6.13629 7.49999L8.81809 10.1818C8.99383 10.3575 8.99383 10.6424 8.81809 10.8182C8.64236 10.9939 8.35743 10.9939 8.1817 10.8182L5.1817 7.81819C5.09731 7.73379 5.0499 7.61933 5.0499 7.49999C5.0499 7.38064 5.09731 7.26618 5.1817 7.18179L8.1817 4.18179C8.35743 4.00605 8.64236 4.00605 8.81809 4.18179Z"
          fill="currentColor"
          fill-rule="evenodd"
          clip-rule="evenodd"
        ></path>
      </svg>
    </a>
    {% else %}
